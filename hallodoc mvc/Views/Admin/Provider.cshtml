    sortbtregion(0);
    function sortbtregion(id) {

        $.ajax({
            url: '/Admin/Provider',
            type: 'POST',
            dataType: 'html',
            data: { region: id },
            // Passyour data here
            success: function (response) {
                $("#TablePhysicianData").html(response)
            },
            error: function () {
                alert('An error occurred.');
            }
        });
    }

    document.getElementById("Providers-tab").classList.add("active");
    document.getElementById("action").classList.add("active");
    document.getElementById("Provider-tab").setAttribute('aria-expanded', true);
</script>

