@model hallodoc_mvc_Repository.ViewModel.Close<div class="container-fluid">    <div class="row d-flex justify-content-center vh-auto" style="background-color: #f9f9f9;">        <div class="col-lg-9">            <div class="d-flex justify-content-between align-items-center mt-4">                <h4 >Close Case</h4>                <div class="d-flex p-3">                    <a  asp-controller="Admin" asp-action="Admin_Dashboard" class="btn btn-outline-info back-btn">                        &lt;                        Back                    </a>                </div>            </div>            <div class="col-lg-12 rounded shadow-lg bg-white p-3">                <div class="d-flex justify-content-between">                    <section>                        <span style="font-size: 13px; color: #6c6c6c;">Patient Name</span>                        <h4 class="text-info mb-3">Test Testing</h4>                    </section>                    <button type="button" class="btn btn-outline-info back-btn my-3">                        Create Invoive through                        Quickbooks                    </button>                </div>                @if (Model.viewDocuments.FirstOrDefault()?.FileName != null)
                {                    <h4 class="mt-2">Documents</h4>                    <table class="table ">                        <thead class="table-secondary">                            <tr class="bg-secondary">                                <th></th>                                <th class="text-end">Upload Date</th>                                <th class="text-end">Actions</th>                            </tr>                        </thead>                        <tbody>                            @foreach (var item in @Model.viewDocuments)
                            {                                <tr class="align-middle">                                    <td>@item.FileName</td>                                    <td class="text-end">@item.Uploaddate</td>                                    <td class="text-end">                                        <a class="btn btn-outline-info back-btn" asp-controller="Home"   asp-action="Download" asp-route-id="@item.FileId">                                            <i class="bi bi-cloud-arrow-down"></i>                                        </a>                                    </td>                                </tr>                            }                        </tbody>                    </table>                }                <form asp-action="CloseConfirm" asp-route-id="@Model.RequestId">                    <div class="row my-3">                        <h4 class="fw-bold">Patient Information</h4>                        <div class="mt-3 col-lg-6 col-margin">                            <div class="form-floating">                                <input type="text" class="form-control" id="fname" placeholder="First Name" asp-for="Fname" disabled>                                <label for="fname">First Name</label>                            </div>                        </div>                        <div class="mt-3 col-lg-6 col-margin">                            <div class="form-floating">                                <input type="text" class="form-control" id="lname" placeholder="Last Name" asp-for="Lname" disabled>                                <label for="lname">Last Name</label>                            </div>                        </div>                        <div class="mt-3 col-lg-6 col-margin">                            <div class="form-floating">                                <input type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" id="dob" placeholder="Date Of Birth" asp-for="BirthDate" disabled>                                <label for="dob">Date Of Birth</label>                            </div>                        </div>                        <div class="mt-3 col-lg-6 col-margin">                            <div class="form-floating">                                <input type="text" class="form-control" id="phone" placeholder="Phone Number" asp-for="Phone" readonly/>                                <label for="phone">Phone Number</label>                            </div>                        </div>                        <div class="mt-3 col-lg-6 col-margin">                            <div class="form-floating">                                <input type="text" class="form-control" id="email" placeholder="E-mail" asp-for="Email" readonly/>                                <label for="email">E-mail</label>                            </div>                        </div>                    </div>                    <div class="d-flex al justify-content-end mt-5 mb-4">                        <button type="button" id="edit" class="btn btn-info text-white mx-3" onclick="editclick()">                            Edit                        </button>                        <button type="submit" asp-action="saavclose" asp-controller="Admin" asp-route-id="@Model.RequestId" id="closecase" class="btn btn-white text-info border-info">Close Case</button>                       <button type="submit" id="save" onclick="saveclicked()" class="btn btn-info text-white mx-3 d-none">                            Save                        </button>                        <a id="cancel" onclick="cancelclicked()" class="btn btn-white text-info border-info d-none">                            Cancel                        </a>                    </div>                </form>                           </div>        </div>    </div></div><script>    function editclick() {        document.getElementById("phone").removeAttribute("readonly");        document.getElementById("email").removeAttribute("readonly");        document.getElementById("save").classList.remove("d-none");        document.getElementById("cancel").classList.remove("d-none");        document.getElementById("edit").classList.add("d-none");        document.getElementById("closecase").classList.add("d-none");    }    function saveclicked() {        document.getElementById("phone").setAttribute("readonly", "");        document.getElementById("email").setAttribute("readonly", "");        document.getElementById("save").classList.add("d-none");        document.getElementById("cancel").classList.add("d-none");        document.getElementById("edit").classList.remove("d-none");        document.getElementById("closecase").classList.remove("d-none");    }</script>