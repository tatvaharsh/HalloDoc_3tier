@model hallodoc_mvc_Repository.ViewModel.ModalData@* ----------------------------------------cancel modal---------------------------------*@<div class="modal fade" id="myModalCancel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">    <div class="modal-dialog modal-dialog-centered" role="document">        <div class="modal-content">            <div class="modal-header bg-info">                <div class="modal-title text-light" id="exampleModalLongTitle">Confirm Cancellation</div>                <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>            </div>            <form asp-action="canclePost" class="p-3">                <div class="text-secondary">                    Patient Name:<span class="text-info">@Model.PatientName</span>                </div>                <select class="form-select mt-4 text-secondary" asp-for="@Model.reason" aria-label="Reasons for Cancellation">                    <option selected>Reasons for Cancellation</option>                    @foreach (var obj in Model.CaseTags.ToList())
                    {                        <option value="@obj.CaseTagId">@obj.Name</option>                    }                </select>                <div class="mt-4 form-floating text-secondary">                    <textarea class="form-control h-100" id="floatingInputNotes" asp-for="note" placeholder="Provide Additional Notes" rows="3"></textarea>                    <label for="floatingInputNotes" class="text-wrap">Provide Additional Notes</label>                </div>                <div class="mt-4 d-flex justify-content-end">                    <button type="submit" class="btn btn-info continue-btn mx-2" data-bs-dismiss="modal">Confirm</button>                    <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>                </div>            </form>        </div>    </div></div>