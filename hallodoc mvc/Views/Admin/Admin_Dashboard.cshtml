                }
                else if(value==5){

                    document.getElementById(`tdown${value}`).style.borderTopColor = " rgb(3, 47, 83)";


                }
                else{
                    document.getElementById(`tdown${value}`).style.borderTopColor = " rgb(44, 1, 70)";

                }
                document.getElementById(`tdown${value}`).classList.remove('d-none');
            }
            else{
                console.log("incactive");
                var value = element.getAttribute('value');
                document.getElementById(`tdown${value}`).classList.add('d-none');
            }
       
    })
