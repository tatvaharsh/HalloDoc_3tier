@model hallodoc_mvc_Repository.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Admin Login Page";
    Layout = "_LayAdmin";
}

<div class="container-fluid">
    <div class="row">
        <div class="d-none d-xl-block col-xl-6 col-lg-12 col-md-12 col-sm-12" style="margin-left: -12px;">
            <img src="~/SRSScreenShorts/11116016_415.jpg" class="img-fluid"
                 style="width:100%; height: 100vh; " alt="Image is not available">
        </div>

        <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 position-relative" style="height: 100vh;">
            <div class="position-absolute top-0 end-0 m-3">
                <button type="button" class="btn btn-outline-dark border-info" onclick="toggle()" id="btnSwitch">
                    <i id="moon" class="bi bi-moon text-info fs-4"></i>
                    <i id="sun" class="bi bi-sun text-info fs-4 d-none"></i>
                </button>
            </div>

            <div class="mx-lg-5 mx-xl-5 px-xl-5 px-lg-5 mx-md-3 px-md-3 mx-sm-2 px-sm-2 pt-2 d-flex flex-column justify-content-between"
                 style="height: 100%;">
                <div class="text-center mt-5 pt-5">
                    <img src="~/SRSScreenShorts/Fig56._Patient_site_1-removebg-preview.png" class="img-fluid" alt="Image Not Available">
                </div>
                <div class=" ">
                    <h2 class="mb-3 text-center mt-2 mb-3 pb-5">Login To Your Account</h2>
                    <form class="mb-3" asp-controller="Admin" asp-action="Admin_Login">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control border-2 border-info" id="exampleInputUsername" asp-for="Email"
                                   placeholder="Username">
                            <label for="exampleInputUsername">Username</label>
                            <div class="user-icon position-absolute top-0 end-0 mx-3 my-2">
                                <i class="bi bi-person-circle fs-4"></i>
                            </div>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control border-2 border-info" id="exampleInputPassword1" asp-for="Passwordhash"
                                   placeholder="Password">
                            <label for="exampleInputPassword1">Password</label>

                        </div>
                        <div class="mb-4 pt-4 d-grid">
                            <button type="submit" class="btn btn-info text-light">Log In</button>
                        </div>
                        <div class="mb-4 text-center">
                            <a asp-controller="Admin" asp-action="Admin_Forgot" class="text-info"
                               style="text-decoration: none;"><b>Forgot Password?</b></a>
                        </div>

                    </form>
                </div>
                <div class="mb-3 pt-lg-2 d-flex justify-content-center">
                    <a href="#" class="terms mx-2" style="text-decoration: none;">Terms of Condition </a>
                    <span class="terms">|</span>
                    <a href="#" class="terms mx-2" style="text-decoration: none;"> Privacy Policy</a>
                </div>
            </div>
        </div>
    </div>
</div>


