@model hallodoc_mvc_Repository.ViewModel.AdminInvocing

@if (Model.Status == 0)
{
    <h5>Dr @Model.PhysicanName has not finalized the timesheet in specific time period.</h5>
}
else if (Model.Status == 1)
{
    <span class="h5">Pending Bi-Weekly TimeSheets</span>

    <table class="mt-2 table">
        <tr style="background-color:gray">
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>

        <tr>
            <td>@Model.StartDate.ToString("MMM dd, yyyy")</td>
            <td>@Model.EndDate.ToString("MMM dd, yyyy")</td>
            <td>
                <p>Pending</p>
            <td>
                <a class="btn btn-outline-info" asp-action="ApproveTimesheet" asp-route-invoiceid="@Model.InvoiceId">Approve</a>
            </td>
        </tr>

    </table>
}
else
{



<div class=" row p-3 ">
    <div class=" col form-floating table-responsive mb-3">
        <table class="table ">
            <colgroup>
                <col style="width: 13%" />
                <col style="width: 7%" />
                <col style="width: 20%" />
                <col style="width: 10%" />
                <col style="width: 25%" />
                <col style="width: 25%" />
            </colgroup>
            <thead>
                <tr class="table-secondary">
                    <td>Date</td>
                    <td>On-call Hours</td>
                    <td>Total Hours</td>
                    <td>Weekend/Holiday</td>
                    <td>Number of Housecalls</td>
                    <td>Number of Phone Concults</td>
                </tr>
            </thead>
            <tbody>

                @foreach (var timesheet in Model.Timesheets)
                {
                    <tr>
                        <td>@timesheet.Date.ToShortDateString()</td>
                        <td>@timesheet.OnCallHours</td>
                        <td>@timesheet.TotalHours</td>
                        <td>
                            @if (timesheet.WeekendHoliday == true)
                            {
                                <span>1</span>
                            }
                            else
                            {
                                <span>0</span>
                            }
                        </td>
                        <td>@timesheet.NumberOfHouseCalls</td>
                        <td>@timesheet.NumberOfPhoneConsults</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="row ps-3">
    <div class="col">
        <h5>
            TimeSheet Reimbursement
        </h5>
    </div>
</div>

<div class=" row p-3 ">
    <div class=" col form-floating table-responsive mb-3">
        <table class="table ">
            <colgroup>
                <col style="width: 15%" />
                <col style="width: 15%" />
                <col style="width: 15%" />
                <col style="width: 30%" />
                <col style="width: 25%" />
            </colgroup>
            <thead>
                <tr class="table-secondary">
                    <td>Date</td>
                    <td>Item</td>
                    <td>Amount</td>
                    <td>Bill</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>


                @if (true)
                {
                    int id1 = 0;
                    @foreach (var timesheet in Model.Receipts)
                    {
                        
                            <tr>
                                <td>@timesheet.ReimbursementDate.ToShortDateString()</td>
                                <td>@timesheet.Item </td>
                                <td>@timesheet.Amount</td>
                                <td>@timesheet.Filename</td>
                                <td>
                                    @if (timesheet.Filename != null)
                                    {
                                        var str = "/Reimbursement/" + timesheet.PhysicianId + "/" + @timesheet.Filename;
                                        <a href=@str target="_blank"> <button class="btn btn-info text-white" id=@str type="button">View</button></a>

                                    }
                                </td>

                            </tr>
                     



                        id1++;
                    }
                }

            </tbody>
        </table>
    </div>
</div>


}

