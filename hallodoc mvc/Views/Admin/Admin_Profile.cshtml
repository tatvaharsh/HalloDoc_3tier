@model hallodoc_mvc_Repository.ViewModel.Profile
@{
    ViewData["Title"] = "Admin Profile";
    Layout = ViewBag.Layout;

}
<div class="backdrop" id="backdrop" style="z-index:140"></div>
<div id="loader-container" class="vh-100 align-items-center justify-content-center" style="z-index:150">

    <div class="loader" style="z-index:150"></div>

</div>
<Partial name="_Toast" />
<div class="container-fluid mb-5">
    <div class="container">
        <div class=" mt-2 d-flex justify-content-between align-items-center">
            <h4>My Profile</h4>
            <a asp-controller="Admin" asp-action="Admin_Dashboard" 
               class="btn shadow  btn-outline-secondary border-info text-info px-3 ">
                <i class="fa-solid fa-angle-left"></i> Back
            </a>
        </div>
        <div class="shadow border rounded my-3 " method="post">
            <div class="mx-3 my-4 ">
                <div class="mt-3">
                    <form method="post" asp-action="ResetPassword" onsubmit="pass()">
                        <h4 class="my-4 pt-4">Account Information</h4>

                        <div class="row">

                            <div class="mb-3 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating  ">
                                <input type="text" class="form-control " id="floatingInputFirst" asp-for="@Model.user.UserName" placeholder="User Name"
                                       disabled aria-label="User Name">
                                <label class="ms-2 " for="floatingInputUsername">User Name</label>
                            </div>
                            <div style="position: relative;"
                                 class="mb-3 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating ">
                                <input type="password" class="form-control inputs" asp-for="@Model.user.PasswordHash" placeholder="Password"
                                       id="password" />
                                <label for="exampleInputPassword1" class=" ms-2 innertext small">Password</label>
                                <span class="text-danger d-none" id="passerror">Verify your password!</span>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">

                                <select class="form-select form-control " disabled id="Status">
                                    <option value="1" selected>Active</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                                <label for="Status" class="ms-2 text-wrap small text-secondary">Status</label>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">
                                <select class="form-select form-control" disabled id="Role">
                                    <option value="1" selected>@Model.Role</option>

                                </select>
                                <label for="Role" class="ms-2 text-wrap small text-secondary">Role</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" id="ResetPassword"
                                    class="btn btn-outline-secondary border-info text-info">
                                Reset Password
                            </button>

                        </div>
                    </form>
                </div>
                <div class="pt-4">
                    <form asp-action="EditAdminProfile" onsubmit="sub()" method="post">
                    <h4 class="mb-4">Administrator Information</h4>
                    <div class="row mb-3">
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 ">
                            <input type="text" class="d1class form-control " id="floatingInputFirst" asp-for="@Model.AdminData.FirstName"
                                   placeholder="First Name" aria-label="First Name">
                            <label class="ms-2 " for="floatingInputFirst">First Name</label>
                            <span asp-validation-for="AdminData.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">
                            <input type="text" class="d1class form-control " id="floatingInputLast" asp-for="@Model.AdminData.LastName"
                                   placeholder="Last Name" aria-label="Last Name">
                            <label class="ms-2  " for="floatingInputLast">Last Name</label>
                                <span asp-validation-for="AdminData.LastName" class="text-danger"></span>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="email" class="d1class form-control " id="email" asp-for="@Model.AdminData.Email"
                                   placeholder="Email" aria-label="Email">
                            <label class="ms-2 " for="floatingInputemail">Email</label>
                               
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="email" class="d1class form-control " id="cemail" asp-for="@Model.AdminData.Email"
                                   placeholder="Confirm Email" aria-label="ConfirmEmail">
                            <label class="ms-2 " for="floatingInputConfirmEmail">Confirm Email</label>
                            <span class="text-danger d-none" id="emailerror">Verify your credentials!</span>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input type="tel" class="d1class phone form-control" asp-for="@Model.AdminData.Mobile" title="Enter Valid Number" id="phone" style="height: 58px;">
                                <span asp-validation-for="AdminData.Mobile" class="text-danger"></span>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-3">
                            @foreach(var item in Model.region)
                            {
                                    if (Model.Reg.FirstOrDefault(x => x.Regionid == item.RegionId)!=null)
                                    {
                                        <input type="checkbox" id="@item.RegionId" name="SelectedRegions" value="@item.RegionId" class="boxes" checked>
                                        <label>@item.Name</label>
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="boxes" name="SelectedRegions" value="@item.RegionId" id="@item.RegionId">
                                        <label>@item.Name</label>
                                    }
                            }
                    
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mt-3 mb-3">
                        <button type="button" id="editBtn" class="btn btn-info text-white EditBtn"
                                onclick="enableFields()">
                            Edit
                        </button>

                        <button type="submit" id="submitBtn"@* onclick="changep()"*@ class="btn btn-info text-white EditBtn">Save</button>

                        <button type="reset" id="cancelBtn" class="btn btn-outline-info EditBtn"
                                onclick="disableFields()">
                            Cancel
                        </button>
                    </div>
                    </form>
                </div>

                <div class="pt-4">
                    <form asp-action="EditAdminp" asp-controller="Admin" method="post">
                    <h4 class="mb-4">Mailing And Billing Information</h4>
                    <div class="row mb-3">
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputAddress1" asp-for="@Model.AdminData.Address1"
                                   placeholder="Address1" aria-label="Address1">
                            <label class="ms-2 " for="floatingInputAddress1">Address1</label>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputAddress2" asp-for="@Model.AdminData.Address2"
                                   placeholder="Address2" aria-label="Address2">
                            <label class="ms-2 " for="floatingInputAddress2">Address2</label>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputCity" asp-for="@Model.AdminData.City"
                                   placeholder="City" aria-label="City">
                            <label class="ms-2 " for="floatingInputCity">City</label>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputState" asp-for="@Model.State"
                                   placeholder="State" aria-label="State">
                            <label class="ms-2 " for="floatingInputState">State</label>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputZipCode" asp-for="@Model.AdminData.Zip"
                                   placeholder="Zip Code" aria-label="Zip Code">
                            <label class="ms-2  " for="floatingInputZipCode">Zip</label>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="tel" class=" dclass phone form-control" asp-for="@Model.AdminData.Mobile" id="phone2" style="height: 58px;">
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mb-3">
                        <button type="button" id="editBtn2" class="btn btn-info text-white EditBtn"
                                onclick="enableFields2()">
                            Edit
                        </button>

                        <button type="submit" id="submitBtn2" class="btn btn-info text-white EditBtn">Save</button>

                        <button type="button" id="cancelBtn2" class="btn btn-outline-info EditBtn"
                                onclick="disableFields2()">
                            Cancel
                        </button>
                    </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_Footer" />
<style>
    .foot{
        position:fixed;
    }

    .iti {
        width: 100%;
    }

    #phone, #phone2 {
        height: 58px;
    }



    .nav-underline .nav-link.active {
        color: #5bc0de !important;
    }

</style>
<script>
    document.getElementById("profile-tab").classList.add("active");
    function changep(){
        const reg=[];
        var i = 0;
        document.querySelectorAll(".boxes").forEach(x=>{
            
            if(x.checked==true){
                reg[i]=x.id;
                i++;
            }    
        })

        $.ajax({
            url: `/Admin/EditAdminProfile`,
            type: 'POST',
            data:{reg:reg},
            success: function (response) {
                $("#tableContainer").html(response)
            },
            error: function () {
                alert('An error occurred.');
            }
        });
    }



    const input = document.querySelector("#phone");
    const input2 = document.querySelector("#phone2");


    // here, the index maps to the error code returned from getValidationError - see readme
    const errorMap = ["Invalid number", "Invalid country code", "Too short", "Too long", "Invalid number"];

    // initialise plugin
    const iti = window.intlTelInput(input, {
        initialCountry: "us",
        utilsScript: "/intl-tel-input/js/utils.js?1706723638591"
    });
    const iti1 = window.intlTelInput(input2, {
        initialCountry: "us",
        utilsScript: "/intl-tel-input/js/utils.js?1706723638591"
    });


    function disableFields() {
        document.querySelectorAll('.d1class').forEach(function (element) {
            element.disabled = true;
        });
        // Hide the submit and cancel buttons, show the edit button
        document.getElementById('submitBtn').style.display = 'none';
        document.getElementById('cancelBtn').style.display = 'none';
        document.getElementById('editBtn').style.display = 'block';
    }

    function enableFields() {
        document.querySelectorAll('.d1class').forEach(function (element) {
            element.disabled = false;
        });
        // Show the submit and cancel buttons, hide the edit button
        document.getElementById('submitBtn').style.display = 'block';
        document.getElementById('cancelBtn').style.display = 'block';
        document.getElementById('editBtn').style.display = 'none';
    }
    disableFields();

    function disableFields2() {
        document.querySelectorAll('.dclass').forEach(function (element) {
            element.disabled = true;
        });
        // Hide the submit and cancel buttons, show the edit button
        document.getElementById('submitBtn2').style.display = 'none';
        document.getElementById('cancelBtn2').style.display = 'none';
        document.getElementById('editBtn2').style.display = 'block';
    }

    function enableFields2() {
        document.querySelectorAll('.dclass').forEach(function (element) {
            element.disabled = false;
        });
        // Show the submit and cancel buttons, hide the edit button
        document.getElementById('submitBtn2').style.display = 'block';
        document.getElementById('cancelBtn2').style.display = 'block';
        document.getElementById('editBtn2').style.display = 'none';
    }
    disableFields2();

    function sub(){
        var mail=document.getElementById("email").value;
        var cmail=document.getElementById("cemail").value;

       
        if(mail!=cmail){
            document.getElementById("emailerror").classList.remove("d-none");
            event.preventDefault();
        }
    }

    function pass(){
        var password = document.getElementById("password").value;

        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{8,}$/;

        if (passwordRegex.test(password)==false){
            document.getElementById("passerror").classList.remove("d-none");
            event.preventDefault();
        }
    }
</script>