
@{
    Layout = "_LayAdmin";
}
<div class="backdrop" id="backdrop" style="z-index:140"></div>
<div id="loader-container" class="vh-100 align-items-center justify-content-center" style="z-index:150">

    <div class="loader" style="z-index:150"></div>

</div>
<div class="container p-0">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <h4 class="mt-3">Requested Shifts</h4>
            </div>
        </div>
    </div>
</div>
<div class="container hideonmobile  rounded shadow mt-3 p-0">

    

    <div id="TableShiftData"></div>


</div>


<script>
    sortbtregion(0);
    function sortbtregion(id) {
        $.ajax({
            url: '/Admin/ShiftReviews',
            type: 'POST',
            dataType: 'html',
            data: { region: id },
            // Passyour data here
            success: function (response) {
                $("#TableShiftData").html(response);
                $('#region').val(id);
            },
            error: function () {
                alert('An error occurred.');
            }
        });
    }



</script>