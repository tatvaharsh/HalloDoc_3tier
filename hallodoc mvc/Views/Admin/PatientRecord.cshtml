@model List<hallodoc_mvc_Repository.ViewModel.PatientRecord>
@{
    Layout = "_LayAdmin";
}
<div class="backdrop" id="backdrop" style="z-index:140"></div>
<div id="loader-container" class="vh-100 align-items-center justify-content-center" style="z-index:150">

    <div class="loader" style="z-index:150"></div>

</div>
<style>
    th, td, tr {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    td, th {
        padding-left: 0.5rem;
    }

    .container {
        max-width: 90rem;
    }
</style>
<div>
    <div class="row" style="--bs-gutter-x: 0rem;">
        <div class="col-12">
            <div class="container mt-5 ps-1 w-100 d-flex justify-content-between">
                <h4 class="mt-3">Patient Record</h4>
                <a class="btn bg-transparent border-info text-info" asp-action="TabChange" asp-route-nav="14" asp-controller="Admin">< Back</a>
            </div>
            <div class="container  rounded bg-white shadow py-3 mb-5 mt-3">
                <div class="table-responsive w-100">
                    <table class="mt-3 table d-md-table d-none" id="patientTable" style="--bs-gutter-x: 0rem;">
                        <thead>
                            <tr class=" border-bottom p-2 mx-0 py-2" scope="row" style=" background-color:lightgray; ">
                                <th scope="col">
                                    Client / Member
                                </th>
                                <th scope="col">
                                    Created Date
                                </th>
                                <th scope="col">
                                    Confirmation
                                </th>
                                <th scope="col">
                                    Provider Name
                                </th>
                                <th scope="col">
                                    Concluded Date
                                </th>
                                <th scope="col">
                                    Status
                                </th>
                                <th scope="col">
                                    Final Report
                                </th>
                                <th scope="col">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr scope="row">
                                    <td scope="col">
                                        @item.Name
                                    </td>
                                    <td scope="col">
                                        @item.createdDate
                                    </td>
                                    <td scope="col">
                                        @item.conNo
                                    </td>
                                    <td scope="col">
                                        @item.phyName
                                    </td>
                                    <td scope="col">
                                        @item.concludeDate
                                    </td>
                                    <td scope="col">
                                        @item.status
                                    </td>
                                    <td scope="col">
                                        <a class="btn bg-transparent border-info text-info">View</a>
                                    </td>
                                    <td scope="col">
                                        <a class="btn bg-transparent border-info text-info" data-bs-toggle="dropdown">Actions</a>
                                        <ul class="dropdown-menu position-fixed" id="ActionsList">
                                            <li><a class="dropdown-item btn" asp-action="ViewCase" asp-route-id="@item.rid" asp-controller="Admin">View Case</a></li>
                                            <li><button type="button" class="dropdown-item btn">Chat</button></li>
                                            <li><a class="dropdown-item btn" asp-action="ViewUpload" asp-controller="Admin" asp-route-id="@item.rid">@item.docNo Documents</a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                   @* --------------------------------------------------------acccordian*@
                    <div class="accordion accordion-flush d-md-none mt-3" id="accordionFlushExample">
                        @foreach (var item in Model)
                        {
                            String Id = 'a' + @item.rid.ToString();

                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#@Id" aria-expanded="false" aria-controls="flush-collapseOne">

                                        <div class="d-block">
                                            <p class="fw-bold">@item.Name</p>
                                            <p>@item.conNo.ToUpper()</p>
                                        </div>

                                    </button>
                                </h2>

                                <div id="@Id" class="accordion-collapse collapse"
                                     data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">

                                        <div class="mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="23" 20height="23" fill="currentColor" class="bi bi-calendar-check text-info" viewBox="0 0 20 20">
                                                <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0" />
                                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z" />
                                            </svg>
                                            <span> Created Date: @item.createdDate</span>
                                        </div>

                                        <div class="mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-person-check text-info" viewBox="0 0 20 20">
                                                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m1.679-4.493-1.335 2.226a.75.75 0 0 1-1.174.144l-.774-.773a.5.5 0 0 1 .708-.708l.547.548 1.17-1.951a.5.5 0 1 1 .858.514M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4" />
                                                <path d="M8.256 14a4.5 4.5 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10q.39 0 .74.025c.226-.341.496-.65.804-.918Q8.844 9.002 8 9c-5 0-6 3-6 4s1 1 1 1z" />
                                            </svg>
                                            <span> Provider: @item.phyName</span>
                                        </div>

                                        <div class="mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-envelope text-info" viewBox="0 0 20 20">
                                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                                            </svg>
                                            <span> Conclude Date: @item.concludeDate</span>
                                        </div>

                                        <div class="mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-telephone text-info" viewBox="0 0 20 20">
                                                <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                                            </svg>
                                            <span>
                                                Status: @item.status
                                               
                                            </span>
                                        </div>

                                        <div class="d-flex justify-content-center">
                                            <div class="w-50">
                                                <a class="d-block btn btn-light border-info text-info bg-transparent my-2" asp-action="ViewCase" asp-route-id="@item.rid">View Case</a>
                                                <a class="d-block btn btn-light border-info text-info bg-transparent" asp-action="ViewUpload" asp-route-id="@item.rid">(@item.docNo) Documents</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

