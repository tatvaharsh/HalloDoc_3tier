@model hallodoc_mvc_Repository.ViewModel.ViewNote
@{
    ViewData["Title"] = "View Notes";
    Layout = "_LayAdmin";
}
<div class="backdrop" id="backdrop" style="z-index:140"></div>
<div id="loader-container" class="vh-100 align-items-center justify-content-center" style="z-index:150">

    <div class="loader" style="z-index:150"></div>

</div>
<Partial name="_Toast" />
<script type="text/javascript">
    $(document).ready(function () {
        if (TempData["success"] != null) {
            toastr.success(TempData["success"]);
            // Optionally remove TempData after displaying the message:
            // TempData.Remove("success");
        }
    });
</script>




<div class="container">
    <div class="d-flex justify-content-between align-items-center mx-3 mt-5">
        <h4>Notes</h4>

        <a asp-controller="Admin" asp-action="Admin_Dashboard"
           class="btn shadow  btn-outline-secondary border-info text-info px-3 ">
            <i class="fa-solid fa-angle-left"></i> Back
        </a>
    </div>

    <form asp-action="ViewNotes" asp-controller="Admin" class="" method="post">
        



                <div class="row mt-1">
                    <div class="form-floating mb-3 col-12 col-sm-6 ">
                        <div class=" border shadow rounded d-flex">
                            <div class="m-3">
                                <i class="bi bi-arrow-left-right fs-5"></i>
                            </div>
                            <div class="mt-2">
                                <h6> Transfer Notes</h6>
                        @if (Model.TransferNotes != null)
                        {

                            <small class="text-secondary">
                                @foreach (var item in @Model.TransferNotes)
                                {
                                    <div>
                                        @item
                                    </div>
                                }

                            </small>
                        }
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3 col-12 col-sm-6 ">
                        <div class=" border shadow rounded d-flex">
                            <div class="m-3">
                                <i class="fa-solid fa-user-doctor fs-5"></i>
                            </div>
                            <div class="mt-2">
                                <h6> Physician Notes</h6>
                                <small class="text-secondary">Test Add, Conclude</small>
                            </div>
                        </div>
                    </div>
                </div>
            

           
                <div class="row mt-2">
                    <div class="form-floating mb-3 col-12 col-sm-6 ">
                        <div class="border shadow rounded d-flex">
                            <div class="m-3">
                                <i class="bi bi-person fs-5"></i>
                            </div>
                            <div class="mt-2">
                                <h6> Admin notes</h6>
                                @if (Model != null)
                                {
                                    <small class="text-secondary">@Model.AdminNotes</small>
                                }
                            </div>
                        </div>
                    </div>
             
      

            @if (Model.Admincancellationnote != string.Empty)
            {
                <div class="form-floating mb-3 col-12 col-sm-6 ">
                    <div class=" border shadow rounded d-flex">
                        <div class="m-3">
                            <i class="fa-solid fa-user-doctor fs-5"></i>
                        </div>
                        <div class="mt-2">
                            <h6> Admin Cancellation Note</h6>
                            <small class="text-secondary">
                                @if (Model != null)
                                {
                                    <small class="text-secondary"> @Model.Admincancellationnote</small>
                                }
                            </small>
                        </div>
                    </div>
                </div>   
            }

            @if (Model.Patientcancellationnote != string.Empty)
            {
                <div class="form-floating mb-3 col-12 col-sm-6 ">
                    <div class=" border shadow rounded d-flex">
                        <div class="m-3">
                            <i class="fa-solid fa-user-doctor fs-5"></i>
                        </div>
                        <div class="mt-2">
                            <h6> Patient Cancellation Note</h6>
                            <small class="text-secondary">
                                @if (Model != null)
                                {
                                    <small class="text-secondary"> @Model.Patientcancellationnote </small>
                                }
                            </small>
                        </div>
                    </div>
                </div>

            }
        </div>




        <div class="border shadow rounded mt-3">
            <div class="row m-3 mx-0 mx-sm-1">
                <div class=" col-12 form-floating mb-3 ">
                    <textarea class="form-control h-100 dclass" id="floatingInput" asp-for="@Model.AdminNotes" placeholder="Textarea" rows="5"></textarea>
                    <label for="floatingInput" class="text-wrap ms-2">Additional Notes</label>
                </div>
            </div>
            <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end m-4 pt-4 ">
                <button type="submit" id="myForm" class="btn text-white btn-info">Save Changes</button>
            </div>
        </div>

    </form>
</div>

<partial name="_Footer" />
<style>
    .foot {
        position: absolute;
    }

    .nav-underline .nav-link.active {
        color: #5bc0de !important;
    }
</style>
<script>
    $(document).ready(function () {
        $("#myForm").submit(function (event) {
            event.preventDefault(); // Prevent default form submission

            // Perform form validation or data processing here (optional)

            swal({
                title: "Are you sure you want to submit?",
                text: "This action cannot be undone!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, submit!",
                cancelButtonText: "No, cancel"
            }).then(function (result) {
                if (result.value) { // If user confirms submission
                    $(this).unbind('submit').submit(); // Submit the form manually
                }
            });
        });
    });
</script>

<script src="~/js/AdminDashboard.js"></script>