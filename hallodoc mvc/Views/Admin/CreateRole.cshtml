@model hallodoc_mvc_Repository.ViewModel.RoleModel@{    Layout = "_LayAdmin";}<div class="backdrop" id="backdrop" style="z-index:140"></div><div id="loader-container" class="vh-100 align-items-center justify-content-center" style="z-index:150">    <div class="loader" style="z-index:150"></div></div><div class="container">    <div class="row">        <div class="col-12">            <div class="d-flex justify-content-between mt-3">                <h4 class="mt-3">Create Role</h4>                <a class="text-start text-info text-decoration-none " asp-action="AccountAccess" asp-controller="Admin" >                    <button class="btn btn-white  text-info border-info rounded " >                        <i class="fa-solid  fa-less-than"></i> Back                    </button>                </a>            </div>            <div class="container rounded bg-white shadow py-3">                               <div class="row">                    <div class="col-12 h5 mb-3">                        Details                    </div>                    <div class="col-sm-12 col-md-6 col-xl-6 form-floating mb-3 text-muted">                        <input type="text" class="form-control" id="RoleName" placeholder="Role Name" >                        <label for="exampleFormControlInput1" class="form-label mx-2">Role Name</label>                                            </div>                    <div class="col-sm-12 col-md-6 col-xl-6">                        <div class="mb-3 border border-light rounded-5">                            <select class="form-select p-3 pla1" id="RoleSelect" asp-for="@Model.SelectedRole" aria-label="form-select-lg example">                                <option  value="0">All</option>                                <option value="1">Admin</option>                                <option value="2">Physician</option>                                <option value="3">Patient</option>                            </select>                        </div>                    </div>                     
                        <div>                            @foreach (var item in Model.menu)
                            {                                <div class="form-check form-check-inline">                                    <input class="form-check-input checkboxes" type="checkbox" name="SelectedReg" data-filename="@item.MenuId" value="@item.MenuId">                                    <label class="form-check-label text6" for="inlineCheckbox1">@item.Name</label>                                                                   </div>                            }                        </div>                                    </div>                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">                    <button class="btn btn-info text-white me-md-2" onclick="submitForm()" type="button">Save</button>                        <button class="btn btn-white text-info border-info" type="button">Cancel</button>                    </div>                </div>            </div>        </div>    </div></div><script>    document.getElementById("home-tab").classList.remove("active");    document.getElementById("Access-tab").classList.add("active");    function ActiveTab(){        debugger;        document.getElementById("home-tab").classList.add("active");        document.getElementById("Access-tab").classList.remove("active");        alert();    }    var check;    $("#RoleSelect").change(function (e) {        check = document.getElementById("RoleSelect").value;        window.location.href = "/Admin/CreateRole?check=" + check;    });    function submitForm() {          var checkboxes = document.querySelectorAll('.checkboxes:checked');        var roles = [];        checkboxes.forEach(function (checkbox) {            roles.push(parseInt(checkbox.getAttribute('data-filename')));        });        var RoleName = document.getElementById("RoleName").value;        check = document.getElementById("RoleSelect").value;        console.log(check);        window.location.href = "/Admin/AssignRole?RoleName=" + RoleName + "&selectedRoles=" + roles + "&check=" + check;    }</script><style>    .nav-underline .nav-link.active {        color: #5bc0de !important;    }</style>