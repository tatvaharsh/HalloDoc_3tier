@model IEnumerable<hallodoc_mvc_Repository.ViewModel.Provider>


<div id="modal"></div>


<div class="table-responsive">
<table class="table d-none d-md-table">
    <thead>
        <tr class="bg-light text-muted h-100">
            <th scope="col">Stop Notification</th>
            <th scope="col">Provider Name<i class="fa fa-arrow-up" aria-hidden="true"></i></th>
            <th scope="col">Role</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody class="text-muted">
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <div class="form-check form-switch ">
                        <input class="form-check-input" onchange="changetoggle(@item.PhyId)" type="checkbox" id="flexSwitchCheckChecked" checked="@item.Notification">
                    </div>
                </td>
                <td>@item.Name</td>
                <td>@item.Role</td>
                @switch (item.Status) {
                case 1:
                        <td>Active</td>
                        break;
                case 2:
                        <td>Pending</td>
                        break;
                case 3:
                        <td>Not Active</td>
                        break;
                default:
                        <td>Not Active</td>
                        break;
                }
                
                <td>
                    <button type="button" class="btn btn-outline-info" onclick="SmsModal(@item.PhyId)">Contact</button>
                    <a asp-action="EditPhysicianAccount" asp-controller="Admin" asp-route-id="@item.PhyId"><button type="button" class="btn btn-outline-info">Edit</button></a>
                </td>
            </tr>
            
        }


    </tbody>
</table>
</div>







<div class="accordion accordion-flush d-md-none mt-3" id="accordionFlushExample">
    @foreach (var item in Model)
    {
        String Id = 'a' + item.PhyId.ToString();

        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#@Id" aria-expanded="false" aria-controls="flush-collapseOne">




                    <div class="d-block">
                        <div class="form-check form-switch d-flex mb-2">
                            <input class="form-check-input" type="checkbox" onchange="changenoti(@item.PhyId)" id="flexSwitchCheckDefault" checked="@item.Notification" />
                            <span class="ms-2 fw-bold">@item.Name</span>
                        </div>
                        <p>On Call Status: Unavailable</p>
                    </div>
                </button>
            </h2>

            <div id="@Id" class="accordion-collapse collapse"
                 data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">


                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-telephone text-info" viewBox="0 0 20 20">
                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                        </svg>
                        <span> Role: @item.Role</span>
                    </div>

                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-check-circle text-info" viewBox="0 0 20 20">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                        </svg>
                        <span> Status: @item.Status</span>
                    </div>

                    <div class="text-end">
                        <button type="button" class="btn btn-info text-white back-btn" onclick="contact(@item.PhyId)"> Contact </button>
                        <a class="btn btn-info text-white back-btn" asp-action="EditProvider" asp-route-id="@item.PhyId"> Edit </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>




<script>


    function SmsModal(id) {

        $("#modal").load('/Admin/ProviderMenuModal/'+id, () => {
            console.log(document.getElementById("modal"));
            const modal = new bootstrap.Modal(document.getElementById('SmS'));
            modal.show();
        });
    }

    function changetoggle(id) {
        fetch('/Admin/ChangeToggle/'+id)
    }
</script>