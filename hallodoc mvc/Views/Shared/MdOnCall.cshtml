@model hallodoc_mvc_Repository.ViewModel.OnCallModal

<div class="backdrop" id="backdrop" style="z-index:140"></div>
<div id="loader-container" class="vh-100 align-items-center justify-content-center" style="z-index:150">

    <div class="loader" style="z-index:150"></div>

</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-4">MDs On Call</h4>
        <a onclick="GetScheduling()"
           class="btn shadow  btn-outline-info px-3 ">
            <i class="fa-solid fa-angle-left fs-6"></i> Back
        </a>
    </div>


    <div class="d-flex justify-content-between align-items-center mb-3 mt-2">
        <form role="search" class="d-flex align-items-center border border-rounded rounded border-info mb-3">
            <i type="search" class="bi bi-search px-2"></i>
            <select class="form-select border-0 regionDropdown" id="MDsRegion" aria-label="Default select example" onchange="GetOnCall(this.value)">
                <option value="0">All Region</option>
                @foreach (var obj in Model.regions.ToList())
                {
                    <option value="@obj.RegionId">
                        @obj.Name
                    </option>

                }
            </select>
        </form>
        <div class="d-flex mb-3">
            <a asp-action="ProviderScheduling" class="btn btn-info text-light d-md-block d-none me-2" >Calendar View</a>
            <a asp-action="ShiftReview" class="btn btn-info text-light d-md-block d-none">Shift for Review</a>

        </div>
    </div>
    <div class="text-end mb-3">
        <a asp-action="ProviderScheduling"  class="btn btn-info text-light d-md-none me-2">Calendar View</a>
        <a asp-action="ShiftReview" class="btn btn-info text-light d-md-none">Shift for Review</a>

    </div>
    <div class="d-md-block d-none border rounded shadow p-3">
        <div class="my-2 mb-3">
            <h5>MD's On Call</h5>
            <div id="matched-events" class="row my-2">
                @foreach (var oncall in Model.OnCall)
                {
                    <div class="col-4 my-2 fw-bolder d-flex align-items-center">
                        <div class="me-2 text-center" style="width:40px;height:40px"><img class="w-100 h-100 border rounded-5" src="~/PhysicianDoc/@oncall.PhysicianId/Photo.svg" /></div>
                        <div>Dr @oncall.FirstName</div>
                    </div>
                }


            </div>

        </div>

        <div class="mt-3">
            <h5>Physicians Off Duty</h5>

            <div id="unmatched-events" class="row">
                @foreach (var offduty in Model.OffDuty)
                {


                    <div class="col-4 my-2 fw-bolder d-flex align-items-center">
                        <div class="me-2 text-center" style="width:40px;height:40px"><img class="w-100 h-100 border rounded-5" src="~/PhysicianDoc/@offduty.PhysicianId/Photo.svg" /></div>
                        <div>Dr @offduty.FirstName</div>
                    </div>

                }
            </div>
        </div>

    </div>

    <div class="d-md-none border rounded shadow p-3">
        <div class="my-2 mb-3">
            <h5>MD's On Call</h5>
            <div id="matched-events" >
                @foreach (var oncall in Model.OnCall)
                {
                    <div class="col-12  fw-bolder d-flex align-items-center mb-3">
                        <div class="me-2 text-center" style="width:40px;height:40px"><img class="w-100 h-100 border rounded-5" src="~/PhysicianDoc/@oncall.PhysicianId/Photo.svg" /></div>
                        <div>Dr @oncall.FirstName</div>
                    </div>
                }


            </div>

        </div>

        <div class="mt-3">
            <h5>Physicians Off Duty</h5>

            <div id="unmatched-events" >
                @foreach (var offduty in Model.OffDuty)
                {


                    <div class="col-12  fw-bolder d-flex align-items-center mb-3">
                        <div class="me-2 text-center" style="width:40px;height:40px"><img class="w-100 h-100 border rounded-5" src="~/PhysicianDoc/@offduty.PhysicianId/Photo.svg" /></div>
                        <div>Dr @offduty.FirstName</div>
                    </div>

                }
            </div>
        </div>

    </div>
</div>
