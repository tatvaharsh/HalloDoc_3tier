                            </svg>
                            <span>Is Active: <input type="checkbox" class="" asp-for=@item.IsActive[0] /></span>
                           
                        </div>

                        <div class="text-end">
                            <button class="btn border-info text-info" onclick="DeleteAccount(@item.BlockRequestId)">Unblock</button>
                            <div class="modal fade" id="a-@item.BlockRequestId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5 text-success" id="exampleModalLabel">Unblock Account</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure want to Unblock this account?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            <a asp-action="UnblockAccount" asp-route-id="@item.Request.RequestId" class="btn btn-success">Yes,Unblock</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
<nav aria-label="..." style="display:flex; justify-content:center; margin-top:10px;">

    <input type="hidden" id="page" />
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true" onclick="pagein(@(page-1))">Previous</a>
        </li>

        @if (page - 1 > 0)
        {
            <li class="page-item"><a class="page-link " href="#" onclick="pagein(@(page-1))">@(page - 1)</a></li>
        }

        <li class="page-item"><a class="page-link active" href="#" onclick="pagein(@(page))">@(page)</a></li>

        @if (page * 10 < c)
        {
            <li class="page-item" aria-current="page">
                <a class="page-link" href="#" onclick="pagein(@(page+1))">@(page + 1)</a>
            </li>
        }

        @if (page * 10 < c)
        {
            <li class="page-item">
                <a class="page-link" href="#" onclick="pagein(@(page+1))">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        }
    </ul>
</nav>
<script>

    function pagein(page) {
        Emailtbl(page);
    }

    function DeleteAccount(id) {


        const modal = new bootstrap.Modal(document.getElementById('a-' + id));
        modal.show();
    }


</script>







