@model IEnumerable<hallodoc_mvc_Repository.ViewModel.UserAccess>
<table class="table d-none d-md-table">
    <thead>
        <tr class="bg-light text-muted h-100">
            <th scope="col">Account type</th>
            <th scope="col">Account POC</th>
            <th scope="col">Phone</th>
            <th scope="col">Status</th>
            <th scope="col">Open Requests</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
<tbody class="text-muted">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.accountType
                </td>
                <td>@item.Username </td>
                <td>@item.Phonenumber</td>
                <td>
                   
                        @switch (item.Status)
                        {
                            case 1:
                                <span>Active</span>

                                break;
                            case 2:
                                <span>
                                    Pending
                                </span>
                                break;
                            case 3:
                                <span>
                                    InActive
                                </span>
                                break;
                        }
                    

                 
                   
                </td>
                <td>'numberofrequest' </td>
                <td>
                    <a><button type="button" class="btn btn-outline-info">Edit</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="accordion accordion-flush d-md-none mt-3" id="accordionFlushExample">
    @foreach (var item in Model)
    {
        String Id = 'a' + @item.Phonenumber.ToString();

        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#@Id" aria-expanded="false" aria-controls="flush-collapseOne">

                    <div class="d-flex justify-content-between w-75">
                        <div class="d-block">
                            <p class="fw-bold">@item.Username</p>
                            <p>
                                Account Type:  @item.accountType
                            </p>

                        </div>
                    </div>
                </button>
            </h2>

            <div id="@Id" class="accordion-collapse collapse"
                 data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">



                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-telephone text-info" viewBox="0 0 20 20">
                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                        </svg>
                        <span> Patient: @item.Phonenumber</span>
                    </div>

                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-check-circle text-info" viewBox="0 0 20 20">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                        </svg>
                        <span>
                            Status:
                            @switch (item.Status)
                            {
                                case 1:
                                    <span>Active</span>

                                    break;
                                case 2:
                                    <span>
                                        Pending
                                    </span>
                                    break;
                                case 3:
                                    <span>
                                        InActive
                                    </span>
                                    break;
                            }
                        </span>
                    </div>


                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-envelope text-info" viewBox="0 0 20 20">
                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                        </svg>
                        <span> Open Request: 0</span>
                    </div>

                    <div class="text-end">
                        <a type="button" class="btn btn-outline-info">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>