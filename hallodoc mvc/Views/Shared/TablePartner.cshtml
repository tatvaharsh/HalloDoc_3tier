@model hallodoc_mvc_Repository.ViewModel.PartnersCM
<table class="table PartnerTable d-md-table d-none">
    <thead style="background-color: rgb(219, 219, 219);">
        <tr>
            <th style="background: transparent;">Profession</th>
            <th style="background: transparent;">Business Name</th>
            <th style="background: transparent;">Email</th>
            <th style="background: transparent;">FAX Number</th>
            <th style="background: transparent;">Phone Number</th>
            <th style="background: transparent;">Business Contact</th>
            <th style="background: transparent;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.partnersdatas)
        {
            <tr class="align-middle">
                <td>@obj.ProfessionName</td>
                <td>@obj.VendorName</td>
                <td>@obj.VendorEmail</td>
                <td>@obj.FaxNo</td>
                <td>@obj.PhoneNo</td>
                <td>@obj.Businesscontact</td>
                <td>
                    <div id="actionBtnGroup" style="display: flex;">
                        <a asp-action="EditPartner" class="btn btn-outline-dark border-info text-info editbtn "
                                asp-route-id="@obj.VendorId">
                            Edit
                        </a>
                        <a asp-action="DeletePartner" class="btn btn-outline-dark border-info text-info delbtn ms-1 "
                           asp-route-id="@obj.VendorId">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="accordion accordion-flush d-md-none  mt-3" id="accordionFlushExample">
    @foreach (var item in Model.partnersdatas)
    {
        String Id = 'a' + @item.VendorId.ToString();

        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#@Id" aria-expanded="false" aria-controls="flush-collapseOne">

                    <p class="fw-bold">@item.VendorName</p>

                </button>
            </h2>

            <div id="@Id" class="accordion-collapse collapse"
                 data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">


                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-envelope text-info" viewBox="0 0 20 20">
                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                        </svg>
                        <span> Email: @item.VendorEmail</span>
                    </div>

                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-telephone text-info" viewBox="0 0 20 20">
                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                        </svg>
                        <span> Fax: @item.FaxNo</span>
                    </div>

                    <div class="mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-telephone text-info" viewBox="0 0 20 20">
                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                        </svg>
                        <span> Patient: @item.PhoneNo</span>
                    </div>

                    @if (item.Businesscontact != "-")
                    {
                        <div class="mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-envelope text-info" viewBox="0 0 20 20">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />
                            </svg>
                            <span> Business Contact: @item.Businesscontact</span>
                        </div>
                    }

                    <div class="text-end">
                        <a asp-action="EditPartner" asp-route-id="@item.VendorId" class="btn btn-outline-info">Edit</a>
                        <a asp-action="DeletePartner" asp-route-id="@item.VendorId" class="btn btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>