@model hallodoc_mvc_Repository.ViewModel.AdminRecord@{    ViewData["Title"] = "Search Records";

    Layout = ViewBag.Layout;}<div class="backdrop" id="backdrop" style="z-index:140"></div><div id="loader-container" class="vh-100 align-items-center justify-content-center" style="z-index:150">    <div class="loader" style="z-index:150"></div></div><div class="mx-5 my-3 p-2">    <div class=" container bg-white rounded p-4 boxshadow mb-5 ">        <form>            <div class="d-flex mb-3">                <div class="col-sm-10 col">                    <span class="h2">Search Records</span>                </div>                <div class="col-sm-2 text-end col">                    <a style=" text-decoration: none;color: #00bce9;">                        <button class="btn btn-info text-white" onclick="ExportR()">                            <i class="fa-solid fa-share" style="color: #ffffff;"></i> Export Data To Excel                        </button>                    </a>                </div>            </div>            <div class="row">                <div class="col-sm-12 col-md-6 col-xl-3  form-floating mb-3 text-muted">                    <div class=" rounded-5">                        <select class="form-select p-3" id="status" aria-label="form-select-lg example" onchange="BusinessTable()">                            <option selected hidden value="0">Select Request Status</option>                            <option value="1">New</option>                            <option value="2">Pending</option>                            <option value="3">Active</option>                            <option value="4">Conclude</option>                            <option value="5">To Close</option>                            <option value="6">Unpaid</option>                        </select>                    </div>                </div>                <div class="col-sm-12 col-md-6 col-xl-3 form-floating mb-3 text-muted">                    <input name="PatientName" type="text" class="form-control" onkeyup="BusinessTable()" id="patientname" placeholder="Patient Name">                    <label for="PatientName" class="form-label ms-2">Patient Name</label>                </div>                <div class="col-sm-12 col-md-6 col-xl-3  form-floating mb-3 text-muted">                    <div class=" rounded-5">                        <select class="form-select p-3" id="type" aria-label="form-select-lg example" onchange="BusinessTable()">                            <option selected hidden value="0">Select Request Type</option>                            @foreach (var type in Model.ReqType)
                            {                                <option value="@type.RequestTypeId">@type.Name</option>                            }                        </select>                    </div>                </div>                <div class="col-sm-12 col-md-6 col-xl-3 form-floating mb-3 text-muted">                    <input name="FromDateOfService" type="date" class="form-control" id="fromdate" placeholder="FromDateOfService">                    <label for="FromDateOfService" class="form-label ms-2">From Date Of Service</label>                </div>            </div>            <div class="row">                <div class="col-sm-12 col-md-6 col-xl-3 form-floating mb-3 text-muted">                    <input name="ToDateOfService" type="date" class="form-control" id="todate" placeholder="ToDateOfService">                    <label for="ToDateOfService" class="form-label ms-2">To Date Of Service</label>                </div>                <div class="col-sm-12 col-md-6 col-xl-3 form-floating mb-3 text-muted">                    <input name="ProviderName" type="text" class="form-control" onkeyup="BusinessTable()" id="providername" placeholder="ProviderName">                    <label for="ProviderName" class="form-label ms-2">Provider Name</label>                </div>                <div class="col-sm-12 col-md-6 col-xl-3 form-floating mb-3 text-muted">                    <input name="Email" type="text" class="form-control" onkeyup="BusinessTable()" id="email" placeholder="Email">                    <label for="Email" class="form-label ms-2">Email</label>                </div>                <div class="col-sm-12 col-md-6 col-xl-3 form-floating mb-3 text-muted">                    <input name="PhoneNumber" type="text" class="form-control" onkeyup="BusinessTable()" id="phone" placeholder="PhoneNumber">                    <label for="PhoneNumber" class="form-label ms-2">Phone Number</label>                </div>            </div>            <div class="row">                <div class="col text-end">                                     <button type="reset" class="btn btn-light border-info text-info bg-transparent mx-2">Clear</button>                    <button class=" btn btn-info text-white" onclick="BusinessTable()" type="button">Search</button>                </div>        </form>    </div>    <div class="row">        <div id="tableContent"></div>    </div></div></div><script>    function ExportR() {        var providername = document.getElementById("providername").value;        var patientname = document.getElementById("patientname").value;        var email = document.getElementById("email").value;        var phone = document.getElementById("phone").value;        var status = document.getElementById("status").value;        var type = document.getElementById("type").value;        var fromdate = document.getElementById("fromdate").value;        var todate = document.getElementById("todate").value;        window.location.href = '/Admin/ExportRecords?providername=' + providername + '&patientname=' + patientname + '&email=' + email + '&phone=' + phone + '&status=' + status + '&fromdate=' + fromdate + '&todate=' + todate + '&reqtype=' + type;    }    $(document).ready(function () {        // var profid = document.getElementById("SelectedProfessionId").value        // var searchstr = document.getElementById("searchstr").value        $.ajax({            url: "/Admin/_SearchRecordsTable",            // data: { profid: profid, searchstr: searchstr },            type: "POST",            success: function (result) {                $("#tableContent").html(result)            },            error: function () {                alert("An error occured!");            }        });    });    function BusinessTable(page) {        var status = document.getElementById("status").value        var searchstr = document.getElementById("patientname").value        var reqtype = document.getElementById("type").value        var fdate = document.getElementById("fromdate").value        var tdate = document.getElementById("todate").value        var pname = document.getElementById("providername").value        var email = document.getElementById("email").value        var mobile = document.getElementById("phone").value        // var id = element.value;        $.ajax({            url: "/Admin/_SearchRecordsTable",            data: { status: status, searchstr: searchstr, reqtype: reqtype, fdate: fdate, tdate: tdate, pname: pname, email: email, mobile: mobile,page:page },            type: "POST",            success: function (result) {                $("#tableContent").html(result)            },            error: function () {                alert("An error occured!");            }        });    };</script>