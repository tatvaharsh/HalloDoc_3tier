@model List<hallodoc_mvc_Repository.ViewModel.PatientHistoryTable>@{    var c = Model.First().PgCount;
    var page = ViewBag.page;}<style>    th, td, tr {        padding-top: 0.5rem;        padding-bottom: 0.5rem;    }    td, th {        padding-left: 0.5rem;    }</style><div class="table-responsive">    <table class="table d-md-table d-none" id="patientTable" style="--bs-gutter-x: 0rem;">        <thead>            <tr class=" border-bottom p-2 mx-0 py-2" scope="row" style=" background-color:lightgray; ">                <th scope="col">                    First Name                </th>                <th scope="col">                    Last Name                </th>                <th scope="col">                    Email                </th>                <th scope="col">                    Phone Number                </th>                <th scope="col">                    Address                </th>                <th scope="col">                    Actions                </th>            </tr>        </thead>        <tbody>            @foreach (var item in Model)            {                <tr scope="row">                    <td scope="col">                        @item.Firstname                    </td>                    <td scope="col">                        @item.Lastname                    </td>                    <td scope="col">                        @item.Email                    </td>                    <td scope="col">                        @item.phone                    </td>                    <td scope="col">                        @item.Address                    </td>                    <td scope="col">                        <a type="button" asp-action="PatientRecord" asp-controller="Admin" asp-route-id="@item.aspId" class="btn bg-transparent border-info text-info">Explore</a>                    </td>                </tr>            }        </tbody>    </table></div><div class="accordion accordion-flush d-md-none mt-3" id="accordionFlushExample">    @foreach (var item in Model)
    {
        String Id = 'a' + @item.aspId.ToString();        <div class="accordion-item">            <h2 class="accordion-header">                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@Id" aria-expanded="false" aria-controls="flush-collapseOne">                    <div class="d-flex justify-content-between w-75">                        <div class="d-block">                            <p class="fw-bold">@item.Firstname @item.Lastname</p>                            <p>@item.phone</p>                        </div>                    </div>                </button>            </h2>            <div id="@Id" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">                <div class="accordion-body">                    <div class="mb-2">                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-envelope text-info" viewBox="0 0 20 20">                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z" />                        </svg>                        <span> Email: @item.Email</span>                    </div>                    <div class="mb-2">                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-telephone text-info" viewBox="0 0 20 20">                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />                        </svg>                        <span> Patient: @item.phone</span>                    </div>                    <div class="text-end">                        <a asp-action="PatientRecord" asp-route-id="@item.aspId" class="btn border-info text-info">Explore</a>                    </div>                </div>            </div>        </div>    }</div><nav aria-label="..." style="display:flex; justify-content:center; margin-top:10px;">    <input type="hidden" id="page" />    <ul class="pagination">        <li class="page-item">            <a class="page-link" href="#" tabindex="-1" aria-disabled="true" onclick="filter2(@(page-1))">Previous</a>        </li>        @if (page - 1 > 0)
        {            <li class="page-item"><a class="page-link " href="#" onclick="filter2(@(page-1))">@(page - 1)</a></li>        }        <li class="page-item"><a class="page-link active" href="#" onclick="filter2(@(page))">@(page)</a></li>        @if (page * 10 < c)
        {            <li class="page-item" aria-current="page">                <a class="page-link" href="#" onclick="filter2(@(page+1))">@(page + 1)</a>            </li>        }        @if (page * 10 < c)
        {            <li class="page-item">                <a class="page-link" href="#" onclick="filter2(@(page+1))">Next</a>            </li>        }
        else
        {            <li class="page-item">                <a class="page-link" href="#">Next</a>            </li>        }    </ul></nav><script>     function filter2() {        let fname = document.getElementById('fname').value;        let lname = document.getElementById('lname').value;        let email = document.getElementById('email').value;        let phone = document.getElementById('phoneno').value;        $.ajax({            url: "/Admin/PatientHistoryTable",            type: "GET",            data: { fname: fname, lname: lname, email: email, phone: phone, page: page },            dataType: "html",            success: function (data) {                $("#tableContent").html(data);            },            error: function () {                alert("No Projects Found");                $("#tableContent").html('An error has occurred');            }        });    }</script>