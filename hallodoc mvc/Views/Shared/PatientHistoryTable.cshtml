@model List<hallodoc_mvc_Repository.ViewModel.PatientHistoryTable><style>    th, td, tr {        padding-top: 0.5rem;        padding-bottom: 0.5rem;    }    td, th {        padding-left: 0.5rem;    }</style><div class="table-responsive">    <table class="mt-3 border-0 w-100 mx-0 hideOnMobile" id="patientTable" style="--bs-gutter-x: 0rem;">        <thead>            <tr class=" border-bottom p-2 mx-0 py-2" scope="row" style=" background-color:lightgray; ">                <th scope="col">                    First Name                </th>                <th scope="col">                    Last Name                </th>                <th scope="col">                    Email                </th>                <th scope="col">                    Phone Number                </th>                <th scope="col">                    Address                </th>                <th scope="col">                    Actions                </th>            </tr>        </thead>        <tbody>            @foreach (var item in Model)            {                <tr scope="row">                    <td scope="col">                        @item.Firstname                    </td>                    <td scope="col">                        @item.Lastname                    </td>                    <td scope="col">                        @item.Email                    </td>                    <td scope="col">                        @item.phone                    </td>                    <td scope="col">                        @item.Address                    </td>                    <td scope="col">                        <a type="button" asp-action="PatientRecord" asp-controller="Admin" asp-route-id="@item.aspId" class="btn bg-transparent border-info text-info">Explore</a>                    </td>                </tr>            }        </tbody>    </table></div>