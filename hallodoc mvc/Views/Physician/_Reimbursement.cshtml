@model IEnumerable<hallodoc_mvc_Repository.ViewModel.Reimbursement><div id="tableContent2" class="container table-responsive p-3 shadow-lg rounded mt-2 " style="min-width: 360px; background-color: #FBFBFB;">    <table class="table">        <thead>            <tr style="background-color:gray">                <th scope="col">Date</th>                <th scope="col">Item</th>                <th scope="col">Amount</th>                <th scope="col">Bill</th>                <th scope="col">Action</th>            </tr>        </thead>        <tbody>            @foreach (var item in Model)            {                <form id="form-@item.Date.ToShortDateString()" enctype="multipart/form-data" asp-route-date="@item.Date.ToString("MM/dd/yyyy")" asp-action="SubmitReciet">                <tr class="text-center">                    <td class="text-nowrap">@item.Date</td>                    <td>                        <input type="text" name="Item" class="form-control" form="form-@item.Date.ToShortDateString()" value="@item.Item">                    </td>                    <td>                        <input type="number" name="Amount" class="form-control" form="form-@item.Date.ToShortDateString()" value="@item.Amount">                    </td>                    <td>                            @if (item.Filename != null)
                            {                            <span id="fileinput-@item.Date.ToShortDateString()" onclick="abcd(@item.Date.ToShortDateString())">@item.Filename</span>                            }
                            else
                            {
                                
                                <input type="file" id="newfile" name="FormFile" form="form-@item.Date.ToShortDateString()" >                            }
                              </td>                    <td>                                                  @if (item.Filename != null)
                            {                            <div class="d-flex ">                                <button class="btn btn-outline-info mx-2" id="editbtn-@item.Date.ToShortDateString()" onclick="Editfield('@item.Date.ToShortDateString()')">Edit</button>                                <button asp-action="EditReciet" asp-route-date="@item.Date.ToString("MM/dd/yyyy")" id="savebtn-@item.Date.ToShortDateString()" class="d-none btn btn-outline-info mx-2" form="form-@item.Date.ToShortDateString()">Save</button>                                <button asp-action="DeleteReciet" asp-route-date="@item.Date.ToString("MM/dd/yyyy")" class="btn btn-outline-info mx-2" form="form-@item.Date.ToShortDateString()">Delete</button>                                                                @{                                        var str1 = "/Reimbursement/" + item.PhysicianId + "/" + item.Filename;                                    }                                <a href=@str1 target="_blank" class="text-decoration-none"> <button class="btn btn-outline-info mx-2" id=@str1 type="button">View</button></a>                            </div>                            }                            else{                            <div class="d-flex">                                <button type="submit" class="btn btn-outline-info" form="form-@item.Date.ToShortDateString()">Save</button>                            </div>                            }                                     </td>                </tr>                </form>                           }        </tbody>    </table></div><script>    function Editfield(val){        document.getElementById("fileinput-" + val).innerHTML = '<input type="File" name="FormFile" form="form-' + val +'" >';        //document.getElementById("fileinput").innerHTML('<input type="File" name="FormFile" form="form - item.Date.ToShortDateString()" >');        document.getElementById("savebtn-"+val).classList.remove("d-none");        document.getElementById("editbtn-"+val).classList.add("d-none");    }</script>